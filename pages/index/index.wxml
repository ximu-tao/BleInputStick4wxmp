<!--index.wxml-->
<view class="content">
  <text class="status">状态：{{ status }} {{ deviceId }}</text> <button type="" class="button" bindtap="startBluetoothDevicesDiscovery">搜索</button>
   
  <text class="msg">消息：{{ msg }} </text>
 
  <button type="primary" class="button" bindtap="lanya1">上一页</button>
  <button type="primary" class="button" bindtap="lanya2">下一页</button>
  <button type="primary" class="button" bindtap="lanya3">ESC</button>
  <button type="primary" class="button" bindtap="lanya4">Enter</button>

  <button type="primary" class="button" bindtap="sendtest">send</button>
  

  
</view>


<view class="venues_list">
  <block wx:for="{{devices}}" wx:key="{{test}}">
    <view class="venues_item">
      <text class="status">设备名称:{{item.name}}</text>
      <text class="status">设备ID:{{item.deviceId}}</text>
      <text class="status">连接状态:{{connectedDeviceId == item.deviceId?"已连接":"未连接"}}</text>
      <view class="section">
      </view>
      <view class="section">
        <button type="warn" class="button" id="{{item.deviceId}}" bindtap="connectTO">连接</button>
      </view>
    </view>
  </block>
</view>
 